<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme" parent="android:Theme.Light.NoTitleBar">

		<!-- Window attributes -->
		<item name="android:windowTitleStyle">@style/XWindowTitle</item>
		<item name="android:windowTitleBackgroundStyle">@style/StatusBarBackground</item>

		<item name="android:windowTitleSize">40dp</item>
	</style>
	<style name="StatusBarBackground">
		<item name="android:background">@drawable/maintab_toolbar_bg</item>

	</style>

	<style name="XWindowTitle">
		<item name="android:shadowColor">#BB000000</item>
		<item name="android:shadowRadius">0</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:textColor">#eeeeeeee</item>
	</style>

	 
	<style name="textTile" parent="android:Widget.TextView">
		<item name="android:padding">3dip</item>
		<item name="android:textColor">#3D6122</item>
	</style>
	<style name="mytext" parent="android:Widget.TextView">
		<item name="android:padding">3dip</item>
		<item name="android:textColor">#333</item>
	</style>
	<style name="styleName">
		<item name="android:baselineAligned">false</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">10px</item>
		<item name="android:paddingRight">10px</item>
	</style>
	<style name="titlebar">

		<item name="android:layout_height">40dip</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">10px</item>
		<item name="android:paddingRight">10px</item>
		<item name="android:background">@drawable/maintab_toolbar_bg</item>
		<item name="android:textSize">32dip</item>
	</style>
	<style name="highttext" parent="android:Widget.TextView">
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>
